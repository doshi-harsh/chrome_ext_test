{
    // Required
    "manifest_version": 2, 
    "name": "Chrome Extension Example",
    "version": "1.0",
    // Recommended
    "default_locale": "en",
    "description": "Build an Extension!",
    "icons": {
        "16": "images/img16.png",
        "32": "images/img32.png"
    },
    // Pick one
    // "browser_action": {...},
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/img16.png",
            "32": "images/img32.png"
        }
    },
    "permissions": ["activeTab","storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "options_page": "options.html",
}